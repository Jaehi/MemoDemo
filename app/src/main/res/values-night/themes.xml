<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MemoDemo" parent="Theme.AppCompat.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/background</item>
        <item name="colorPrimaryVariant">@color/base</item>
        <item name="colorOnPrimary">@color/highlight</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/background</item>
        <item name="colorSecondaryVariant">@color/base</item>
        <item name="colorOnSecondary">@color/highlight</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/background</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="my_dialog_theme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="android:colorAccent">@color/base</item><!--header background-->
        <item name="android:windowBackground">@color/background</item>     <!--calendar background-->
        <item name="android:colorControlActivated">@color/base</item> <!--selected day-->
        <item name="android:textColorPrimary">@color/highlight</item> <!--days of the month-->
        <item name="android:textColorSecondary">@color/highlight</item>    <!--days of the week-->
        <item name="colorControlHighlight">@color/highlight</item>
        <item name="colorAccent">@color/base</item>
    </style>
</resources>